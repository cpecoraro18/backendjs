{
  "version": "0.106.0",
  "author": "Vlad Seryakov",
  "name": "backendjs",
  "description": "A platform for building backends",
  "main": "lib/index",
  "homepage": "http://bkjs.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/vseryakov/backendjs.git"
  },
  "dependencies": {
    "apn": ">= 2.2.0",
    "uuid": ">= 7.0.2",
    "hashids": ">= 1.1.4",
    "cron": ">= 1.8.2",
    "express": ">= 4.17.1",
    "emailjs": ">= 2.2.0",
    "xml2json": ">= 0.12.0",
    "mime": ">= 2.4.4",
    "http-proxy": ">= 1.12.1",
    "redis": ">= 3.0.0",
    "qs": ">= 6.9.3",
    "bcrypt": ">= 3.0.4",
    "ws": ">= 7.2.3",
    "formidable": ">= 1.2.2",
    "cookie-parser": ">= 1.4.5",
    "mmmagic": ">= 0.5.3",
    "nan": ">= 2.14.0",
    "bkjs-utils": ">= 0.2.6",
    "bkjs-cache": ">= 0.5.3",
    "bkjs-sqlite": ">= 0.2.6",
    "bkjs-syslog": ">= 0.3.1"
  },
  "modulesDependencies": {
    "consolidate": ">= 0.14.0",
    "passport": ">= 0.2.0",
    "bkjs-wand": ">= 0.5.1",
    "memcached": ">= 2.1.1"
  },
  "devDependencies": {
    "html-minifier": ">=3.5.21",
    "uglify-es": "^3.3.5",
    "uglifycss": ">=0.0.29"
  },
  "keywords": [
    "bkjs",
    "webservice",
    "aws",
    "database",
    "API",
    "DynamoDB",
    "DynamoDB Streams",
    "Sqlite",
    "Elasticsearch",
    "PostgreSQL",
    "MySQL",
    "Redis",
    "pubsub",
    "account",
    "location",
    "messaging",
    "instance",
    "jobs",
    "cron",
    "geohash"
  ],
  "engines": {
    "node": ">=8.0"
  },
  "license": "BSD-3-Clause",
  "bin": {
    "bkjs": "./bkjs",
    "bksh": "./bkjs"
  },
  "config": {
    "sync": {
      "path": "node_modules",
      "include": [
        "*.js.map",
        "*.bundle.html.js",
        "*.bundle.js",
        "*.bundle.css"
      ]
    },
    "bundles": {
        "bkjs": {
            "js": [
                "web/js/jquery.js",
                "web/js/popper.js",
                "web/js/bootstrap.js",
                "web/js/knockout.js",
                "web/js/knockout-mapping.js",
                "web/js/crypto.js",
                "web/js/bootpopup.js",
                "web/js/bkjs.js",
                "web/js/bkjs-lib.js",
                "web/js/bkjs-account.js",
                "web/js/bkjs-ko.js",
                "web/js/bkjs-bootstrap.js"
            ],
            "js.dev": [
                "web/js/jquery.min.js",
                "web/js/popper.min.js",
                "web/js/bootstrap.min.js",
                "web/js/knockout.min.js",
                "web/js/knockout-mapping.min.js",
                "web/js/crypto.js",
                "web/js/bootpopup.js",
                "web/js/bkjs.js",
                "web/js/bkjs-lib.js",
                "web/js/bkjs-account.js",
                "web/js/bkjs-ko.js",
                "web/js/bkjs-bootstrap.js"
            ],
            "css": [
                "web/css/bootstrap.css",
                "web/css/font-awesome.css"
            ]
        }
    }
  },
  "scripts": {
    "start": "./bkjs run-backend",
    "stop": "./bkjs stop",
    "doc": "node tools/doc.js > web/doc.html",
    "prepublish": "npm run build",
    "build": "./bkjs web-bundle -all",
    "devbuild": "./bkjs web-bundle -all -dev"
  }
}
