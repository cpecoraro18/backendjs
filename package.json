{
  "version": "0.75.0",
  "author": "Vlad Seryakov",
  "name": "backendjs",
  "description": "A platform for building backends",
  "main": "lib/index",
  "homepage": "http://bkjs.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/vseryakov/backendjs.git"
  },
  "dependencies": {
    "apn": ">= 2.0.0",
    "uuid": ">= 2.0.1",
    "cron": ">= 1.1.0",
    "express": ">= 4.16.2",
    "emailjs": ">= 1.0.1",
    "xml2json": ">= 0.11.0",
    "mime": ">= 2.0.3",
    "marked": ">= 0.3.5",
    "http-proxy": ">= 1.12.1",
    "hiredis": ">= 0.4.1",
    "redis": ">= 2.4.2",
    "qs": ">= 6.5.1",
    "ejs": ">= 1.0.0",
    "passport": ">= 0.2.0",
    "ws": ">= 1.0.1",
    "formidable": ">= 1.0.17",
    "consolidate": ">= 0.14.0",
    "cookie-parser": ">= 1.4.1",
    "cookie-session": ">= 1.0.1",
    "mmmagic": ">= 0.4.5",
    "nan": ">= 2.4.0",
    "bkjs-utils": ">= 0.2.5",
    "bkjs-cache": ">= 0.5.2",
    "bkjs-sqlite": ">= 0.2.1",
    "bkjs-syslog": ">= 0.3.0"
  },
  "modulesDependencies": {
    "bkjs-wand": ">= 0.5.0",
    "memcached": ">= 2.1.1",
    "mongodb": ">= 2.1.4",
    "amqp": ">= 0.2.4",
    "hazelcast-client": ">= 0.5.0",
    "cassandra-driver": ">= 3.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2",
    "uglify-es": "^3.3.5",
    "uglifycss": ">=0.0.29"
  },
  "keywords": [
    "bkjs",
    "webservice",
    "aws",
    "database",
    "API",
    "DynamoDB",
    "Cassandra",
    "Sqlite",
    "PostgreSQL",
    "MySQL",
    "Redis",
    "pubsub",
    "account",
    "location",
    "messaging",
    "instance",
    "jobs",
    "cron",
    "geohash"
  ],
  "engines": {
    "node": ">=6.0"
  },
  "license": "BSD-3-Clause",
  "bin": {
    "bkjs": "./bkjs",
    "bksh": "./bkjs"
  },
  "config": {
    "sync": {
      "path": "node_modules",
      "exclude": "examples/"
    },
    "bundles": {
        "bkjs": {
            "js": [
                "web/js/jquery.js",
                "web/js/bootstrap.js",
                "web/js/knockout.js",
                "web/js/knockout.mapping.js",
                "web/js/crypto.js",
                "web/js/bkjs.js",
                "web/js/bkjs-lib.js",
                "web/js/bkjs-ko.js",
                "web/js/bkjs-bootstrap.js"
            ],
            "js.dev": ["web/js/jquery.debug.js",
                "web/js/bootstrap.debug.js",
                "web/js/knockout.debug.js",
                "web/js/knockout.mapping.js",
                "web/js/crypto.js",
                "web/js/bkjs.js",
                "web/js/bkjs-lib.js",
                "web/js/bkjs-ko.js",
                "web/js/bkjs-bootstrap.js"
            ],
            "css": [
                "web/css/bootstrap.css",
                "web/css/font-awesome.css"
            ]
        }
    }
  },
  "scripts": {
    "start": "./bkjs run-backend",
    "stop": "./bkjs stop",
    "doc": "node tools/doc.js > web/doc.html",
    "prepublish": "npm run build",
    "build": "./bkjs web-bundle -all",
    "devbuild": "./bkjs web-bundle -all -dev"
  }
}
