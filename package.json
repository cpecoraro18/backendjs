{
  "version": "0.129.0",
  "author": "Vlad Seryakov",
  "name": "backendjs",
  "description": "A platform for building backends",
  "main": "lib/index",
  "homepage": "http://bkjs.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/vseryakov/backendjs.git"
  },
  "dependencies": {
    "express": "4.18.1",
    "formidable": "2.0.1",
    "cookie": "0.5.0",
    "cookie-parser": "1.4.6",
    "qs": "6.10.3",
    "ws": "8.6.0",
    "uuid": "8.3.2",
    "hashids": "2.2.10",
    "cron": "2.0.0",
    "emailjs": "2.2.0",
    "xml2json": "0.12.0",
    "mime": "3.0.0",
    "microtime": "3.0.0"
  },
  "devDependencies": {
    "html-minifier": "4.0.0",
    "uglify-es": "3.3.9",
    "uglifycss": "0.0.29"
  },
  "modDependencies": {
    "argon2": "0.28.5",
    "bcrypt": "5.0.1",
    "mmmagic": "0.5.3",
    "consolidate": "0.16.0",
    "http-proxy": "1.18.1",
    "redis": "3.1.2",
    "pg": "8.7.3",
    "bkjs-sqlite": "0.2.9",
    "unix-dgram": "2.0.4",
    "web-push": "3.5.0",
    "@parse/node-apn": "5.1.3",
    "bkjs-wand": "0.5.1",
    "sharp": "0.30.4",
    "nats": "2.6.1",
    "amqplib": "0.9.0"
  },
  "keywords": [
    "bkjs",
    "webservice",
    "websockets",
    "aws",
    "database",
    "API",
    "DynamoDB",
    "Sqlite",
    "Elasticsearch",
    "PostgreSQL",
    "NATS",
    "Redis",
    "pubsub",
    "account",
    "messaging",
    "instance",
    "jobs",
    "cron"
  ],
  "engines": {
    "node": ">=14.0"
  },
  "license": "BSD-3-Clause",
  "bin": {
    "bkjs": "./bkjs",
    "bksh": "./bkjs"
  },
  "config": {
    "sync": {
      "path": "node_modules",
      "include": [
        "*.js.map",
        "*.bundle.html.js",
        "*.bundle.js",
        "*.bundle.css"
      ]
    },
    "bundles": {
      "bkjs": {
        "js": [
          "web/js/jquery.min.js",
          "web/js/popper.min.js",
          "web/js/bootstrap.min.js",
          "web/js/knockout.min.js",
          "web/js/knockout-mapping.min.js",
          "web/js/bootpopup.js",
          "web/js/bkjs.js",
          "web/js/bkjs-crypto.js",
          "web/js/bkjs-lib.js",
          "web/js/bkjs-account.js",
          "web/js/bkjs-ko.js",
          "web/js/bkjs-bootstrap.js"
        ],
        "js.dev": [
          "web/js/jquery.js",
          "web/js/popper.js",
          "web/js/bootstrap.js",
          "web/js/knockout.js",
          "web/js/knockout-mapping.js",
          "web/js/bootpopup.js",
          "web/js/bkjs.js",
          "web/js/bkjs-crypto.js",
          "web/js/bkjs-lib.js",
          "web/js/bkjs-account.js",
          "web/js/bkjs-ko.js",
          "web/js/bkjs-bootstrap.js"
        ],
        "css": [
          "web/css/bootstrap.css",
          "web/css/font-awesome.css"
        ]
      },
      "srp": {
        "js": [
            "web/js/jsbn.js",
            "web/js/bkjs-srp.js"
        ],
        "js.dev": [
            "web/js/jsbn.js",
            "web/js/bkjs-srp.js"
        ]
      }
    }
  },
  "scripts": {
    "start": "./bkjs run-backend",
    "stop": "./bkjs stop",
    "doc": "node tools/doc.js > web/doc.html",
    "build": "./bkjs web-bundle -all",
    "devbuild": "./bkjs web-bundle -all -dev"
  }
}
